{% extends "parent.twig" %}
{% block content %}

<h1 class="profile-title">
	{{ org.name }}
	<small>
		Verify Volunteer Hours
	</small>
</h1>

{% if success %}
	<h4>Thank you!</h4>
	<p>
		The <strong>{{ hour.hours }} {{ app.locale.p(hour.hours,'volunteer hour','volunteer hours') }}</strong> for <strong>{{ user.name(true) }}</strong> on <strong>{{ hour.timestamp|date('l, F j, Y') }}</strong> at <strong>{{ place.name }}</strong> have been {% if approved %}approved{% else %}denied{% endif %}.
	</p>
{% else %}
	{% for error in app.errors.messages() %}
		<p class="alert alert-danger">
			{{ error }}
		</p>
	{% endfor %}
{% endif %}

<hr/>
<p>
	{{ org.name }} thanks you for your participation.
</p>

{% endblock %}